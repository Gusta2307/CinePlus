@using ProgrammingServicesQueries.DTO;
@using ServiceCommonCollection;
@model DataCollection<ProgrammingDTO>

<div>
    <br><br><br><br>
    <table class="table table-striped table-hover ">
        <thead>
            <tr class="active">
                <th>Sala</th>
                <th>Nombre</th>
                <th>Fecha</th>
                <th>Precio</th>
                <th>Precio en puntos</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr class="success">
                    <td>@item.ID_Cinema</td>
                    <td>@Html.ActionLink(item.Name_M, "MovieView", "CinemaListings", new { id = item.ID_M })</td>
                    <td>@item.DataHour_P</td>
                    <td>@item.Ticket_Price</td>
                    <td>@item.Pay_Points</td>
                </tr>
            }
        </tbody>
    </table>
</div>